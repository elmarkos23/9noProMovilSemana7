<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Login">
  <ContentPage.Content>
    <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
      <Label Text="Ventana de Login" FontSize="Medium"/>
      <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
      <Entry x:Name="txtContrasenia" Placeholder="Ingrese la contraseña" IsPassword="True"/>
      <Button x:Name="btnIniciar" Text="Iniciar sesión" Clicked="btnIniciar_Clicked"/>
      <Button x:Name="btnRegistro" Text="Registrar" Clicked="btnRegistro_Clicked" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>