<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Elemento"
             Title="Elemento">
  <ContentPage.Content>
    <StackLayout>
      <Label Text="Nombre"/>
      <Entry x:Name="txtNombre" Placeholder="Ingrese Nombre"/>
      <Label Text="Usuario"/>
      <Entry x:Name="txtUsuario" Placeholder="Ingrese Usuario"/>
      <Label Text="Contraseña"/>
      <Entry x:Name="txtContrasenia" Placeholder="Ingrese contraseña" IsPassword="True"/>
      <Button x:Name="btnActualziar" Text="Actualizar" Clicked="btnActualizar_Clicked" BackgroundColor="LightGreen"/>
      <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" BackgroundColor="Coral"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>